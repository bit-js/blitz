{
    "compilerOptions": {
        "module": "Preserve",
        "lib": [
            "ESNext"
        ],
        "esModuleInterop": true,
        "target": "ESNext",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "moduleResolution": "bundler",
        "declaration": true,
        "emitDeclarationOnly": true,
        "verbatimModuleSyntax": true
    },
    "include": [
        "src"
    ]
}
